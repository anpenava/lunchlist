{{user-messages isUnfilledForm=isUnfilledForm}}
<form id="new-todo-form" class="offset-bottom">
  <div class="form-group">
  	<label for="">Author *</label>
  	{{input type="text" class="form-control" value=author placeholder="Kreator ovog jela.." required=true}}
  </div>

  <div class="form-group">
  	<label for="">Title *</label>
  	{{input type="text" class="form-control" value=title placeholder="Naslov jela.." required=true}}
  </div>
   	
  <div class="form-group">	
  	<label for="">Due date *</label>
  	{{input type="date" class="form-control" value=date required=true}}
  </div> 

  <div class="form-group"> 	
  	<label for="">Body *</label>
  	{{textarea class="form-control" value=body rows="12" cols="50" placeholder="Opis pripreme jela.." required=true}}
  </div>	

  <button type="submit" {{action 'addLunch'}} class="btn btn-primary">Submit</button>
  {{#link-to 'lunchlist' classNames='btn btn-default'}}Close{{/link-to}}
</form>